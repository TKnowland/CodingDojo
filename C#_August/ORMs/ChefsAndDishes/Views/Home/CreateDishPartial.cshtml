@using ChefsAndDishes.Models
@model Dish
<form asp-action="ProcessDish" asp-controller="Home" method="post">
    <span asp-validation-for="Name"></span>
    <label asp-for="Name">Name:</label>
    <input asp-for="Name"/>

    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories">Calories:</label>
    <input asp-for="Calories"/>
    
    <span asp-validation-for="Tastiness"></span>
    <label asp-for="Tastiness">Tastiness:</label>
    <select asp-for="Tastiness">
        <option value=""></option>
        @for (int i = 1; i <= 5; i++)
        {
            <option value="@i">@i</option>
        }
    </select>


    <span asp-validation-for="Chef"></span>
    <label asp-for="Chef">Chef</label>
    <select asp-for="Chef">
        <option value=""></option>
        @foreach (Chef chef in @ViewBag.chefs)
        {
            <option value="@chef.ChefId">adsadsa</option>
        }
    </select>
 
    <button>Add Chef</button>
</form>