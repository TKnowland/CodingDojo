@using ProductsAndCategories.Models
@model Category

<div class="content">
    <div class="left">
        <h1 class="text-center">New Category</h1>
        <form asp-action="ProcessCategory" asp-controller="Home" method="post">
            <span asp-validation-for="Name"></span>
            <div>
                <label asp-for="Name">Name</label>
                <input asp-for="Name">
            </div>
            <button>Create</button>
        </form>
    </div>
    <div class="right">
        <h1 class="text-center">Existing Categories</h1>
        <div>
            @foreach (Category category in @ViewBag.Categories)
            {
                <a href="/category/@category.CategoryId">@category.Name</a>
            }
        </div>
    </div>
</div>